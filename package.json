{
  "name": "com.hikvision",
  "version": "0.2.3",
  "description": "Hikvision Camera support for Homey",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc && npm run copy-assets && npm run copy-drivers",
    "copy-assets": "powershell -Command \"Copy-Item 'src/drivers/hikvision-camnvr/hikvision.js' 'dist/drivers/hikvision-camnvr/' -Force\"",
    "copy-drivers": "powershell -Command \"Copy-Item 'dist/drivers/hikvision-camnvr/*.js' 'drivers/hikvision-camnvr/' -Force\"",
    "watch": "tsc --watch",
    "clean": "rimraf dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "homey",
    "hikvision",
    "camera",
    "security"
  ],
  "author": "Martin P <martin@pussamsies.de>",
  "license": "MIT",
  "dependencies": {
    "homey": "^3.0.0",
    "request": "^2.88.2",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/request": "^2.48.8",
    "@types/xml2js": "^0.4.11",
    "typescript": "^5.0.0",
    "rimraf": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}